<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bisonGreen"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/search_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:width="1.52in"
        android:backgroundTint="@color/common_google_signin_btn_text_dark"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Search"
        android:textColor="@color/bisonGreen"
        android:textSize="30sp"
        app:cornerRadius="10dp"
        app:icon="?android:attr/actionModeWebSearchDrawable"
        app:iconGravity="end"
        app:iconSize="32dp"
        app:iconTint="@color/bisonGreen"
        app:layout_constraintBottom_toTopOf="@+id/map_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title2" />

    <TextView
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="74dp"
        android:layout_marginEnd="75dp"
        android:fontFamily="serif"
        android:text="NDSU"
        android:textColor="@color/bisonYello"
        android:textSize="100sp"
        app:layout_constraintBottom_toTopOf="@+id/title2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="95dp"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-light"
        android:text="Map App"
        android:textColor="@color/bisonYello"
        android:textSize="55sp"
        app:layout_constraintBottom_toTopOf="@+id/search_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title1" />

    <Button
        android:id="@+id/map_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:width="1.5in"
        android:backgroundTint="@color/common_google_signin_btn_text_dark"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="View Map"
        android:textColor="@color/bisonGreen"
        android:textSize="30sp"
        app:cornerRadius="10dp"
        app:icon="@android:drawable/ic_dialog_map"
        app:iconGravity="textEnd"
        app:iconTint="@color/bisonGreen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>